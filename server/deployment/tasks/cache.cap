namespace :laravel do
	desc 'Clearing cache'
	task :cache do
		on roles(:app) do
			execute :php , "#{fetch(:release_path)}/artisan key:generate --env=production"
			execute :php , "#{fetch(:release_path)}/artisan dump-autoload"
			execute :php , "#{fetch(:release_path)}/artisan optimize"
		end
	end
end